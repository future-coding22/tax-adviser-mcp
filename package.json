{
  "name": "tax-advisor-mcp",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server that acts as a personal tax and financial advisor for Dutch residents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tax-advisor-mcp": "./dist/index.js"
  },
  "author": "",
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "tax-advisor",
    "dutch-tax",
    "financial-advisor",
    "telegram-bot"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:daemon": "node dist/daemon.js",
    "dev": "tsx watch src/index.ts",
    "dev:daemon": "tsx watch src/daemon.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "setup": "tsx scripts/setup.ts",
    "validate": "tsx scripts/validate-config.ts",
    "inspector": "mcp-inspector node dist/index.js",
    "knowledge:refresh": "tsx scripts/knowledge-refresh.ts",
    "knowledge:stats": "tsx scripts/knowledge-stats.ts",
    "knowledge:export": "tsx scripts/knowledge-export.ts",
    "knowledge:prune": "tsx scripts/knowledge-prune.ts",
    "knowledge:changes": "tsx scripts/knowledge-changes.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "dotenv": "^17.2.3",
    "gray-matter": "^4.0.3",
    "marked": "^15.0.6",
    "node-cron": "^3.0.3",
    "yaml": "^2.6.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
